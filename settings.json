{
    // Configurações específicas de Python
    "[python]": {
        "editor.formatOnType": true
    },

    // Segurança
    "security.workspace.trust.untrustedFiles": "open",

    // Acessibilidade
    "editor.accessibilitySupport": "off",

    // Explorador de Arquivos
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": true,
    "explorer.confirmDragAndDrop": false,

    // Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,

    // Editor de Código
    "editor.inlineSuggest.enabled": true,
    // "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontFamily": "Hack Nerd Font",
    // "editor.fontFamily": "Ubuntu Nerd Font Propo",
    "editor.fontSize": 12,
    "editor.lineHeight": 1.3,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.fontLigatures": true,
    "editor.rulers": [0, 175],
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": false,
    "editor.snippetSuggestions": "top",
    "editor.fontWeight": "1000",
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.autoClosingBrackets": "always",
    "editor.autoSurround": "brackets",
    "editor.codeLens": true,


    // Language Server Protocol
    // "python.languageServer": "Pylance",
    // "python.analysis.typeCheckingMode": "basic",  // ou "off" ou "strict" dependendo do nível de verificação que você deseja
    // "python.analysis.autoSearchPaths": true,
    // "python.analysis.useLibraryCodeForTypes": true,


    // Formatação
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "isort.args": ["--profile", "black"],

    "black-formatter.args": [
        "--line--length=140"
    ],
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.labelFormat": "short",
    "workbench.layoutControl.enabled": true,
    // "workbench.settings.applyToAllProfiles": ["pylint.args"],

    // Terminal Integrado
    "terminal.integrated.fontSize": 12,
    // "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    // "terminal.integrated.fontFamily": "loveska Nerd Font Mono Regular",

    // Configurações de Python
    "python.analysis.extraPaths": [
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Developement",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Developement\\btg - faas",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Developement\\controlPanel",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Developement\\risco",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Developement\\tools",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Production",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Production\\btg - faas",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Production\\controlPanel",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Production\\risco",
        "C:\\Users\\RafaelKoyama\\Strix Capital\\Backoffice - General\\Processos Python\\Production\\tools"
    ],

    "flake8.args": ["--max-line-length=140", "--ignore=E402"],


    // MSSQL
    "mssql.connections": [
        {
            "server": "sqlstrix.database.windows.net",
            "database": "SQLDB",
            "authenticationType": "SqlLogin",
            "user": "SQLADMIN",
            "password": "",
            "emptyPasswordInput": false,
            "savePassword": true
        }
    ],
    "mssql.objectExplorer.groupBySchema": false,

    // Jupyter
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "interactiveWindow.executeWithShiftEnter": true,

    // GitHub Copilot
    "github.copilot.advanced": {},
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "yaml": false,
        "python": true
    },
    "github.copilot.editor.enableAutoCompletions": true,

    // Glassit (transparência)
    "glassit.alpha": 255,
    "glassit.step": 50,

    // Drawio
    "hediet.vscode-drawio.resizeImages": null,

    // Símbolos
    "symbols.hidesExplorerArrows": false,

    // Prettier (JavaScript, HTML, CSS)
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.requireConfig": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "workbench.colorTheme": "Field Lights",
    "workbench.iconTheme": "field-lights",
    "window.titleBarStyle": "custom",

}
